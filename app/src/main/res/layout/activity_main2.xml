<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.minkyung.ido.MainActivity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#fdf5e1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginTop="100dp">
            <Button
                android:id="@+id/but_danger"
                android:layout_width="160dp"
                android:layout_height="180dp"
                android:layout_weight="1"
                android:onClick="onClick"
                android:layout_marginLeft="10dp"
                android:background="@drawable/danger"/>
            <Button
                android:id="@+id/but_know"
                android:layout_width="160dp"
                android:layout_height="180dp"
                android:layout_weight="1"
                android:onClick="onClick"
                android:layout_marginRight="10dp"
                android:background="@drawable/know"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/but_with"
                android:layout_width="160dp"
                android:layout_height="180dp"
                android:layout_weight="1"
                android:onClick="onClick"
                android:layout_marginLeft="10dp"
                android:background="@drawable/with" />
            <Button
                android:id="@+id/but_tell"
                android:layout_width="160dp"
                android:layout_height="180dp"
                android:layout_weight="1"
                android:onClick="onClick"
                android:layout_marginRight="10dp"
                android:background="@drawable/tell"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
